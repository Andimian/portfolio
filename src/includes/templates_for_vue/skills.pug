    svg(viewBox="0 0 200 200" width="140" height="140" preserveAspectRatio="none").scill__svg
      g.js-skill-circle.js-skill-circle
        circle(fill="none" stroke-width="9" stroke="#eaeaea" r="90" cx="100" cy="100")
        circle.scill__svg-circle-under-html(fill="none" ref="color-circle" stroke-width="20" r="90" cx="100" cy="100" 
        stroke="url(#circle-gradient)").
        linearGradient(id='circle-gradient' )

.scills {
  height: 100vh;
  width: 100%;
  background: url('../images/content/scills-bg.jpg')no-repeat center center;
  background-size: cover;
  position: relative;
}

.container--scills {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scills__text {
  width: 40%;
}


.scills__pic-wrapper {
  height: 100%;
  position: absolute;
  top: 10%;
  left: 0;
}